<% include ../partials/header %>

<section id="comment">
 <div class="container my-5 p-5 mx-auto">
  <div class="row border border-dark p-5 m-5 mx-auto w-50">
 
   <div class="col-md-12 text-center my-5">
    <h2 class="my-5">Add New Comment to <%= blog.name %></h2>
    <form action="/blogs/<%= blog._id %>/comments" method="POST">
     <div class="form-group w-60 mx-auto">
      <label for="author">Author</label>
      <input type="text" class="form-control" id="author" placeholder="Author" name="comment[author]">
     </div>
    
     <div class="form-group w-60 mx-auto my-5">
      <label for="text">Text</label>
      <input type="text" class="form-control" id="text" placeholder="Text" name="comment[text]">
     </div>
   </div>
   
   <button class="btn-comment mx-auto">Submit</button>
  </form>

  </div>
 </div>
</section>

<% include ../partials/footer %>
