<% include ./partials/header %>

<section id="register">
 <div class="container w-50 border border-dark registered">
  <h1 class="text-center my-5"> <i class="fas fa-code"></i>  Register</h1>
  
   <div class="row">

    <div class="col-md-12 my-3">

     <form action="/register" method="POST">
      <div class="form-group  text-center">
       <label for="username">Username</label>
       <input type="text" class="form-control w-50 mx-auto" id="username" placeholder="Username" name="username">
      </div>
   
      <div class="form-group  text-center my-5">
       <label for="email">Email</label>
       <input type="text" class="form-control w-50 mx-auto" id="email" placeholder="Email" name="email">
      </div>
   
      <div class="form-group  text-center">
       <label for="password">PassWord</label>
       <input type="text" class="form-control w-50 mx-auto" id="password" placeholder="Password" name="password">
     </div>

    <button class="btn-comment mx-auto d-block my-5">Submit</button>
   </form>
   
  </div>
 </div>
</div>
</section>


