<% include ../partials/header %>

<section id="edit" class="my-5 p-5">
<div class="container my-5 p-5">
 <div class="row">
 
  <div class="col-md-6">
   <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" value="<%= blog.name %>" name="blog[name]">
    </div>

    <div class="form-group">
      <label for="image-1">Image-1</label>
      <input type="text" class="form-control" id="image-1" value="<%= blog.image1 %>" name="blog[image1]">
    </div>
    
    <div class="form-group">
     <label for="paragraph-1">Example textarea</label>
     <textarea class="form-control" id="paragraph-1" rows="12" name="blog[paragraph1]" value="<%= blog.paragraph1 %>"></textarea>
    </div>
   </div>
    
   <div class="col-md-6">
    <div class="form-group">
      <label for="detail">Detail</label>
      <input type="text" class="form-control" id="detail" value="<%= blog.detail %>" name="blog[detail]">
    </div>
     
    <div class="form-group">
      <label for="image-2">Image-2</label>
      <input type="text" class="form-control" id="image-2" value="<%= blog.image2 %>" name="blog[image2]">
    </div>   
  
    <div class="form-group">
     <label for="paragraph-1">Example textarea</label>
     <textarea class="form-control" id="paragraph-1" rows="12" name="blog[paragraph2]" value="<%= blog.paragraph2 %>"></textarea>
     </div>
     
    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" class="form-control" id="location" value="<%= blog.location %>" name="blog[location]">
    </div>
    
   </div>
   
    <button class="btn-comment">Submit</button>
   </form>

 </div>
</div>
</section>

<% include ../partials/footer %>
